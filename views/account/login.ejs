<div class="account-container">
<h1>
<%= title %>
</h1>

    <form id="loginForm" action="/account/login" method="post" class="space-y-6">

        <div class="form-group">
            <label for="accountEmail" class="block text-gray-700 font-semibold mb-2">Email Address</label>
            <input type="email" id="accountEmail" name="accountEmail" required
                placeholder="Enter your email address"
                title="A valid email address is required (e.g., name@example.com)"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <%= locals.account_email %>
        </div>
            <input type="password" id="accountPassword" name="accountPassword" required
                placeholder="Enter your password"
                title="Password must meet security requirements (e.g., length, special characters, etc.)"
                **pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"**
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">

                <button type="button" id="togglePassword" class="mt-2 text-sm text-blue-600 hover:text-blue-800 underline">
                    Show Password
                </button>
            <div class="form-group">
                <label for="accountPassword" class="block text-gray-700 font-semibold mb-2">Password</label>
                <div class="text-sm text-gray-500 mb-2 p-2 border border-dashed border-gray-300 rounded-lg bg-gray-50">
                    **Password Requirements:**
                    <ul class="list-disc list-inside mt-1 space-y-0.5">
                        <li>Minimum 12 characters</li>
                        <li>At least 1 capital letter (A-Z)</li>
                        <li>At least 1 number (0-9)</li>
                        <li>At least 1 special character (e.g., #, $, !, @)</li>
                    </ul>
                </div>
        </div>

        <button type="submit" class="submit-button w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 
        rounded-lg transition duration-200 shadow-md">
            Login
        </button>
    </form>

    <div class="registration-link mt-6 text-center">
        <p class="text-gray-600 mb-2">Don't have an account?</p>
        <a href="/account/register" title="Click to register a new account."
            class="text-blue-600 hover:text-blue-800 font-medium underline transition duration-200">
            Sign Up
        </a>
    </div>
</div>